{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "buildOnSave": true
}
